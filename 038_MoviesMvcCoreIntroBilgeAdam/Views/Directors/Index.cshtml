@*@model IEnumerable<_038_MoviesMvcCoreIntroBilgeAdam.Entities.Director>*@
@model IEnumerable<DirectorModel>

@{
    ViewData["Title"] = "Director List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Director</a>
</p>

<p class="bg-info text-dark">
    @{
        // count değişkenini burada set ediyoruz.
        string count = "";
        if (Model != null && Model.Count() > 0)
        {
            count = Model.Count().ToString();
            if (Model.Count() == 1)
            {
                count += " director found.";
            }
            else
            {
                count += " directors found.";
            }
        }
        else
        {
            count = "No directors found.";
        }
    }

    @* yukarıda set ettiğimiz count değişkeninin değerini burada kullanıyoruz. *@
    @count
</p>

@if (TempData["Message"] != null)
{
    <p class="bg-warning text-black">
        @TempData["Message"]
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>

            @*<th>
                @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                @Html.DisplayNameFor(model => model.Surname)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FullNameModel)
            </th>

            <th>

                @*@Html.DisplayNameFor(model => model.Retired)*@
                @Html.DisplayNameFor(model => model.RetiredModel)

            </th>

            <th>
                @Html.DisplayNameFor(model => model.MovieCountModel)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                @*<td>
                    @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FullNameModel)
                </td>

                <td>

                    @*@Html.DisplayFor(modelItem => item.Retired)*@
                    @Html.DisplayFor(modelItem => item.RetiredModel)

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MovieCountModel)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>&nbsp;|&nbsp;
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;|&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
